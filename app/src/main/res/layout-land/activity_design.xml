<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_design"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robin.myapplication1.Design">

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="8 inch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:id="@+id/buttonSmall"
            android:layout_gravity="start"
            />

        <Button
            android:text="10 inch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:id="@+id/buttonMeduim"
            android:layout_gravity="start"
            />

        <Button
            android:text="12 inch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:id="@+id/buttonLarge"
            android:layout_gravity="start"
            android:layout_marginRight="50dp"
            />

        <TextView
            android:text="Toppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="35sp"
            android:typeface="sans"
            android:paddingLeft="23dp"
            android:paddingTop="15dp"
            android:textStyle="normal|bold"
            android:layout_column="1"
            android:layout_gravity="start"/>

        <TextView
            android:text="Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="35sp"
            android:typeface="sans"
            android:paddingLeft="45dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:textStyle="normal|bold"
            android:layout_column="2"
            android:layout_gravity="start"
            />

        <TextView
            android:text="Total"
            android:textSize="35sp"
            android:typeface="sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:id="@+id/tvtotal"
            android:layout_column="6"
            android:layout_gravity="start"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etTotal"
            android:layout_column="7"
            android:layout_gravity="start"
            />

    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="100dp">

        <ImageView
            android:id="@+id/IVham"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            android:src="@drawable/ham_menu" />

        <ImageView
            android:id="@+id/IVonion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/onion_menu" />

        <ImageView
            android:id="@+id/IVpepper"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="3"
            android:src="@drawable/pepper_menu" />

        <ImageView
            android:id="@+id/IVpineapple"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="4"
            android:src="@drawable/pine_menu" />

    </GridLayout>

    <FrameLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginLeft="248dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="44dp"
        android:layout_alignTop="@+id/gridLayout2"
        android:layout_toRightOf="@+id/gridLayout2"
        android:layout_toEndOf="@+id/gridLayout2"
        android:id="@+id/frameLayout">

        <ImageView
            android:id="@+id/IVbase"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/pizzabase" >
        </ImageView>

        <ImageView
            android:id="@+id/ham"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ham"
            android:alpha="0"/>

        <ImageView
            android:id="@+id/onion"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/onion"
            android:alpha="0"/>

        <ImageView
            android:id="@+id/pepper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/pepper"
            android:alpha="0"/>
        <ImageView
            android:id="@+id/pineapple"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/pine"
            android:alpha="0"/>

    </FrameLayout>

    <TableLayout
        android:id="@+id/tableForSideBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/gridLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

    </TableLayout>

</RelativeLayout>


