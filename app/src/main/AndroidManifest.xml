<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robin.myapplication1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Login"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"
            android:taskAffinity="com.example.robin.myapplication1"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Register"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"
            />

        <activity
            android:name=".Menu"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"
            android:taskAffinity="com.some.task.affinity"
            />

        <activity
            android:name=".Design"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"
            android:taskAffinity="com.some.other.affinity"
            />

        <activity
            android:name=".Menu_Design"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".CompletedOrder"
            android:windowSoftInputMode="stateHidden" />

    </application>

</manifest>